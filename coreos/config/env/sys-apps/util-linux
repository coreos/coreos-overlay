# Punt setarch as we don't use it anywhere.
util_linux_mask="
  /usr/bin/i386
  /usr/bin/x86_64
  /usr/bin/linux32
  /usr/bin/linux64
  /usr/bin/setarch
"

# Punt support for filesystems we don't care about.
util_linux_mask+="
  /sbin/fsck.bfs
  /sbin/fsck.cramfs
  /sbin/fsck.minix
  /sbin/mkfs.bfs
  /sbin/mkfs.cramfs
  /sbin/mkfs.minix
"

# Punt esoteric programs.
util_linux_mask+="
  /sbin/raw
  /usr/bin/cytune
  /usr/bin/ddate
  /usr/bin/isosize
  /usr/sbin/fdformat
  /usr/sbin/tunelp
"

PKG_INSTALL_MASK+=" ${util_linux_mask}"
INSTALL_MASK+=" ${util_linux_mask}"
